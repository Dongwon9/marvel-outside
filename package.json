{
  "name": "marvel-outside",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "docker compose up",
    "down": "docker compose down",
    "start:dev:be": "pnpm -F backend start:dev",
    "start:dev:fe": "pnpm -F frontend start:dev",
    "start:dev": "pnpm -r start:dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -F backend test",
    "test:integration": "pnpm -F backend test:integration",
    "test:all": "pnpm -F backend test:all",
    "db:push:dev": "pnpm -F backend db:push:dev",
    "db:reset:dev": "pnpm -F backend db:reset:dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
