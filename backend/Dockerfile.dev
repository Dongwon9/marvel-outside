# syntax=docker/dockerfile:1
FROM node:24-bookworm

WORKDIR /workspace

# Use root for setup then switch to non-root
USER root
RUN corepack enable && mkdir -p /workspace && chown -R node:node /workspace

# Install PostgreSQL client tools for health checks and migrations
RUN apt-get update && apt-get install -y postgresql-client && rm -rf /var/lib/apt/lists/*

# Copy workspace configuration and lock file from root
COPY --chown=node:node pnpm-workspace.yaml pnpm-lock.yaml ./

# Copy backend package.json
COPY --chown=node:node backend/package.json ./backend/

# Install dependencies using frozen lockfile
USER node
RUN pnpm install --frozen-lockfile --filter backend

WORKDIR /workspace/backend

# Copy entrypoint script
COPY --chown=node:node backend/scripts/docker-entrypoint.sh /workspace/docker-entrypoint.sh

# Make entrypoint script executable
USER root
RUN chmod +x /workspace/docker-entrypoint.sh

USER node

EXPOSE 3000

# Use entrypoint script to handle migrations and startup
ENTRYPOINT ["/workspace/docker-entrypoint.sh"]
